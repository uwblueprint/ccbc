{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Backend",
            "localRoot": "${workspaceFolder}/backend/typescript",
            "remoteRoot": "/app"
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/backend/typescript/package.json",
                "localRoot": "${workspaceFolder}/backend/typescript"
            }
        }
    ]
}